<Window x:Class="IpMsg.UI.Views.ReceiveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Receive Message"
        Height="240" Width="346"
        ResizeMode="CanResizeWithGrip">
    <Canvas Width="346" Height="240" Background="Transparent">
        <Button x:Name="OpenButton" Width="318" Height="124" Canvas.Left="12" Canvas.Top="72" Content="Open" />
        <Button x:Name="CloseButton" Width="82" Height="28" Canvas.Left="80" Canvas.Top="208" Content="Close" IsCancel="True" />
        <Button x:Name="ReplyButton" Width="86" Height="28" Canvas.Left="182" Canvas.Top="208" Content="Reply" IsDefault="True" />
        <CheckBox x:Name="QuoteCheck" Width="60" Height="20" Canvas.Left="278" Canvas.Top="210" Content="Quote" />
    </Canvas>
</Window>
