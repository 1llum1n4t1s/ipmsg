<Window x:Class="IpMsg.UI.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ログイン"
        Height="220" Width="320"
        ResizeMode="CanResizeWithGrip">
    <Canvas Width="320" Height="220" Background="Transparent">
        <TextBlock Text="ユーザー名" Canvas.Left="20" Canvas.Top="20" Width="80" />
        <TextBox Width="180" Canvas.Left="110" Canvas.Top="16" />

        <TextBlock Text="パスワード" Canvas.Left="20" Canvas.Top="60" Width="80" />
        <PasswordBox Width="180" Canvas.Left="110" Canvas.Top="56" />

        <CheckBox Content="ログイン状態を保持" Canvas.Left="110" Canvas.Top="94" />

        <Button Content="ログイン" Width="90" Height="26" Canvas.Left="120" Canvas.Top="140" IsDefault="True" />
        <Button Content="キャンセル" Width="90" Height="26" Canvas.Left="220" Canvas.Top="140" IsCancel="True" />
    </Canvas>
</Window>
